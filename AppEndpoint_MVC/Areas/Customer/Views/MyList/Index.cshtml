@using AppDomainCore.CustomersRequests.Entity
@model List<AppDomainCore.CustomersRequests.Entity.CustomersRequest>

@{
	var customerId = User.FindFirst("CustomerId")?.Value;
}



<div class="goodup-dashboard-content">
	<div class="dashboard-tlbar d-block mb-5">
		<div class="row">
			<div class="colxl-12 col-lg-12 col-md-12">
				<h1 class="ft-medium fs-lg">آگهی های من</h1>
				<nav aria-label="breadcrumb">
					<ol class="breadcrumb">
						<li class="breadcrumb-item text-muted"><a href="#">خانه</a></li>
						<li class="breadcrumb-item text-muted"><a href="#">داشبورد</a></li>
						<li class="breadcrumb-item"><a href="#" class="theme-cl">آگهی های من</a></li>
					</ol>
				</nav>
			</div>
		</div>
	</div>

	<div class="dashboard-widg-bar d-block">
		<div class="row">
			<div class="col-xl-12 col-lg-12">
				<div class="dashboard-list-wraps bg-white rounded mb-4">
					<div class="dashboard-list-wraps-head br-bottom py-3 px-3">
						<div class="dashboard-list-wraps-flx">
							<h4 class="mb-0 ft-medium fs-md"><i class="fa fa-file-alt ms-2 theme-cl fs-sm"></i>آگهی های من</h4>
						</div>
					</div>

					<div class="dashboard-list-wraps-body py-3 px-3">
						<div class="dashboard-listing-wraps">

                            <!-- Single Listing Item -->
							@foreach (var c in Model)
							{
								<div class="dsd-single-listing-wraps">

									<div class="dsd-single-lst-caption">
										<div class="dsd-single-lst-title"><h5>@c.Description</h5></div>
										<span class="agd-location">@c.Status.ToString()</span>
										<br>
@* 										<span class="agd-location"><i class="lni lni-map-marker ms-1"></i>@c.Customer.User.Province.Name</span>
 *@										<div class="ico-content">
											<div class="Goodup-ft-first">
												<div class="Goodup-rating">
												</div>
												@if (@c.Customer.CustomersRequests == null)
												{
													<div class="Goodup-price-range">
														<span class="ft-medium">هیچ پیشنهادی داده نشده</span>
													</div>
												}
												else
												{
													<div class="Goodup-price-range">
														<span class="ft-medium">@c.Customer.CustomersRequests.Count پیشنهاد ثبت شده</span>
													</div>
												}

											</div>
										</div>

										<div class="dsd-single-lst-footer">

											<a asp-area="Customer" asp-controller="MyList" asp-action="GetRequest" asp-route-Id="@customerId"  class="btn btn-view mr-1"><i class="fas fa-eye ms-1"></i>نمایش</a>

										</div>
									</div>
								</div>
							}
						</div>
					</div>
				</div>
			</div>
		</div>

	</div>
</div>