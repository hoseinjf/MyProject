@using AppDomainCore.Customers.DTO

@model CustomerAddDto
@{
    ViewData["Title"] = "پیازچه > مدیریت مشتریان > ویرایش مشتری";

}


<div class="col-lg-12">
    <div class="portlet box shadow">
        <div class="portlet-heading">
            <div class="portlet-title">
                <h3 class="title">
                    مشتریان
                </h3>
            </div><!-- /.portlet-title -->
        </div><!-- /.portlet-heading -->
        <div class="portlet-body">
            <div class="top-buttons-box mb-2">
            </div>
            <div class="row">
                <form asp-area="Admin" asp-controller="Customer" asp-action="Update" enctype="multipart/form-data" id="simple-form" role="form" method="post">
                    @* <img style="border-radius : 50%" src="@Model.User.ImagePath" width="80" height="80" /> *@
                    <hr />
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="UserId" />
@*                     <input type="hidden" asp-for="Photo.Id" />
                    <input type="hidden" asp-for="Photo.Src" /> *@

                    <div class="form-body">
                        <div class="form-group">
                            <div class="input-group">
                                <input asp-for="FirstName"  class="form-control" type="text" placeholder="نام">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="input-group">
                                <input asp-for="LastName"  class="form-control" type="text" placeholder="نام خانوادگی">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="input-group">
                                <input asp-for="Phone"  class="form-control" type="text" placeholder="شماره موبایل" required />
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="input-group">
                                <input asp-for="Email" class="form-control" type="email" placeholder="آدرس ایمیل" required />
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="input-group">
                                <input asp-for="Address" class="form-control" type="text" placeholder="آدرس" />
                            </div>
                        </div>


                        <div class="form-group">
                            <div class="input-group">
                                <input asp-for="UserName"  class="form-control" type="text" placeholder="نام کاربری" />
                            </div>
                        </div>

                        <div class="form-group relative">
                            <input asp-for="Pic" type="file" class="form-control">
                            <label>آپلود عکس</label>
                            <div class="input-group round">
                                <input type="text" class="form-control file-input" placeholder="برای آپلود کلیک کنید">
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-success">
                                        <i class="icon-picture"></i>
                                        آپلود عکس
                                        <div class="paper-ripple"><div class="paper-ripple__background"></div><div class="paper-ripple__waves"></div></div>
                                    </button>
                                </span>
                            </div><!-- /.input-group -->
                            <div class="help-block"></div>
                        </div>

@*                         <div class="form-group">
                            <div class="input-group">
                                <select asp-for="User.Role" class="form-select">
                                    <select asp-for="User.Role" class="form-select">
                                        <option value="1">Admin</option>
                                        <option value="2">Visitor</option>
                                        <option value="3">Advertiser</option>
                                    </select>
                                </select>
                            </div>
                        </div> *@

@*                         <div class="form-group relative">
                            <input asp-for="User.ProfileImgFile" type="file" class="form-control">
                            <label>آپلود عکس</label>
                            <div class="input-group round">
                                <input type="text" class="form-control file-input" placeholder="برای آپلود کلیک کنید">
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-success">
                                        <i class="icon-picture"></i>
                                        آپلود عکس
                                        <div class="paper-ripple">
                                            <div class="paper-ripple__background"></div>
                                            <div class="paper-ripple__waves"></div>
                                        </div>
                                    </button>
                                </span>
                            </div><!-- /.input-group -->
                            <div class="help-block"></div>
                        </div> *@

                    </div>
                    <hr>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-success">
                            <i class="icon-check"></i>
                            ذخیره
                        </button>
                        <a asp-area="Admin" asp-controller="Customer" asp-action="Index" class="btn btn-warning">
                            بازگشت
                        </a>
                    </div>
                </form>
            </div>
        </div><!-- /.portlet-body -->
    </div><!-- /.portlet -->
</div><!-- /.col-lg-12 -->