@using AppDomainCore.Customers.Entity

@model List<Customer>
@{
    ViewData["Title"] = "پیازچه > مدیریت مشتریان > لیست مشتریان";
}
<div class="col-lg-12">
    <div class="portlet box shadow">
        <div class="portlet-heading">
            <div class="portlet-title">
                <h3 class="title">
                    مشتریان
                </h3>
            </div><!-- /.portlet-title -->
        </div><!-- /.portlet-heading -->
        <div class="portlet-body">
            <div class="top-buttons-box mb-2">
                <a asp-action="Add" class="btn btn-success" >
                    <i class="icon-plus"></i>
                    افزودن
                    <div class="paper-ripple"><div class="paper-ripple__background"></div><div class="paper-ripple__waves"></div></div>
                </a>
            </div>
            <div class="row">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped" id="data-table">
                        <thead>
                            <tr>
                                <th class="p-low"><input type="checkbox" id="btn-check-all-toggle"></th>
                                <th>#</th>
                                <th>عکس</th>
                                <th>نام</th>
                                <th>نام خانوادگی</th>
                                <th>نام کاربری</th>
                                <th>موبایل</th>
                                <th>ایمیل</th>
                                <th>شهر</th>
                                <th>عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in @Model)
                            {
                                <tr>
                                    <td><input type="checkbox"></td>
                                    <td>@user.Id</td>

                                    @if (user.User.Photo==null)
                                    {
                                        <td><img style="border-radius : 50%" src="~/AdminTemplate/images/user/placeholder.jpg" width="80" height="80" /></td>
                                    }
                                    else
                                    {
                                        <td><img style="border-radius : 50%" src="@user.User.Photo.Src" width="80" height="80" /></td>
                                    }

                                    <td>@user.User?.FirstName</td>
                                    <td>@user.User?.LastName</td>
                                    <td>@user.User?.UserName</td>
                                    <td>@user.User?.Phone</td>
                                    <td>@user.User?.Email</td>
                                    <td>@user.User?.Province?.Name</td>
                                    <td>
                                        <a asp-area="Admin" asp-controller="Customer" asp-action="Update" asp-route-Id="@user.Id" class="btn btn-info">ویرایش</a>
                                        <a onclick="return confirm('آیا از حذف این کاربر اطمینان دارید؟')" asp-area="Admin" asp-controller="Customer" asp-action="Delete" asp-route-Id="@user.Id" class="btn btn-danger">حذف</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div><!-- /.portlet-body -->
    </div><!-- /.portlet -->
</div><!-- /.col-lg-12 -->
