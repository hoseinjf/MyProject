@using AppDomainCore.Works.DTO

@model WorkDto
@{
    ViewData["Title"] = "پیازچه > مدیریت خدمات > ایجاد خدمت";

}

<div class="col-lg-12">
    <div class="portlet box shadow">
        <div class="portlet-heading">
            <div class="portlet-title">
                <h3 class="title">
                    خدمات
                </h3>
            </div>
        </div>
        <div class="portlet-body">
            <div class="top-buttons-box mb-2">
            </div>
            <div class="row">
                <form asp-area="Admin" asp-controller="Work" asp-action="Add" enctype="multipart/form-data" id="simple-form" role="form" method="post">
                    <div class="form-body">
                        <div class="form-group">
                            <div class="input-group">
                                <input asp-for="Title" class="form-control" type="text" placeholder="نام خدمت">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="input-group">
                                <input asp-for="Description" class="form-control" type="text" placeholder="توضیحات خدمت">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="input-group">
                                <select asp-for="SubCategoryId" class="form-select">
                                    @foreach (var sub in ViewBag.Work)
                                    {
                                        <option value="@sub.Id">@sub.Title</option>
                                    }
                                </select>
                            </div>
                        </div>


                        <div class="form-group relative">
                            <input asp-for="Pic" type="file" class="form-control">
                            <label>آپلود عکس</label>
                            <div class="input-group round">
                                <input type="text" class="form-control file-input" placeholder="برای آپلود کلیک کنید">
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-success">
                                        <i class="icon-picture"></i>
                                        آپلود عکس
                                        <div class="paper-ripple"><div class="paper-ripple__background"></div><div class="paper-ripple__waves"></div></div>
                                    </button>
                                </span>
                            </div><!-- /.input-group -->
                            <div class="help-block"></div>
                        </div>

                    </div>
                    <hr>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-success">
                            <i class="icon-check"></i>
                            ذخیره
                        </button>
                        <a asp-action="Index" class="btn btn-warning">
                            بازگشت
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>