@using AppDomainCore.CustomersRequests.Entity
@model List<CustomersRequest>
@{
    ViewData["Title"] = "پیازچه > مدیریت درخواست ها > لیست درخواست ها";
}
<div class="col-lg-12">
    <div class="portlet box shadow">
        <div class="portlet-heading">
            <div class="portlet-title">
                <h3 class="title">
                    درخواست ها
                </h3>
            </div><!-- /.portlet-title -->
        </div><!-- /.portlet-heading -->
        <div class="portlet-body">
           
            <div class="row">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped" id="data-table">
                        <thead>
                            <tr>
                                <th class="p-low"><input type="checkbox" id="btn-check-all-toggle"></th>
                                <th>#</th>
                                <th>عکس</th>
                                <th>نام خدمت</th>
                                <th>وضعیت</th>
                                <th>عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in @Model)
                            {
                                <tr>
                                    <td><input type="checkbox"></td>
                                    <td>@user.Id</td>

                                    @if (user.Customer.User.Photo == null)
                                    {
                                        <td><img style="border-radius : 50%" src="~/AdminTemplate/images/user/placeholder.jpg" width="80" height="80" /></td>
                                    }
                                    else
                                    {
                                        <td><img style="border-radius : 50%" src="@user.Customer.User.Photo.Src" width="80" height="80" /></td>
                                    }

                                    <td>@user.Work.Title</td>
                                    <td>@user.Status.ToString()</td>
                                    <td>
                                        <a asp-area="Admin" asp-controller="CustomersRequest" asp-action="Update" asp-route-Id="@user.Id" class="btn btn-info">ویرایش</a>                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div><!-- /.portlet-body -->
    </div><!-- /.portlet -->
</div><!-- /.col-lg-12 -->
